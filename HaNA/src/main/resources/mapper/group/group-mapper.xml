<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="group">

	<select id="selectOneGroup" resultType="group">
		select
			*
		from
			group_
		 where
		 	group_id = #{groupId}
	</select>
	<insert id="insertOneGroup">
		insert into
			group_
		values(
    		#{groupId},
    		#{groupName},
    		#{leaderId},
    		default,
    		default,
			#{hashtag},
    		null
		<!-- <choose>
			<when test="hashtag != null">
				#{hashtag}
			</when>
			<when test="image != null">
				#{image}
			</when>
		</choose> -->
		)
		
	</insert>
	
</mapper>

