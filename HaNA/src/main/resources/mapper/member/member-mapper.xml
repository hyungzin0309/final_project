<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

	<insert id="memberEnroll">
		insert into member values
		(#{id}, #{password}, #{name}, #{picture}, #{personalId}, #{accountType}, #{addressFirst}, #{addressSecound}, #{addressThird}, #{addressFull}, #{introduce}, default)
	</insert>


	<update id="updateMember">
	 update member set
	 name = #{name},
	 address_first =  #{addressFirst},
	 <!-- addressSecound = #{addressSecound},
	 addressThrid =  #{addressThird},
	 addressFull =  #{addressFull}, -->
	 introduce = #{introduce} 
	 where 
	 	id = #{id}	
	</update>

     <update id= "updatePersonality">
     update personality
     set
     member_id = #{id},
     personality = #{personality}
     </update>
	
	<update id="updateInterest">
		update interest
     set
     member_id = #{id},
     interest = #{interest}
	</update>



</mapper>